<h2>Lista klientów</h2>
<!--<a class="btn btn-small"  href="/dwa">Pokaż wszystkich</a>-->
    <table>
        <thead>
            <tr>

                <th>
                    E-mail
                </th>
                <th>
                    Imię
                </th>
                <th>
                    Data następnego kontaktu
                </th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody>
        {{#each allClients}}
            <tr>
                <th>
                    <a href="mailto: {{this.mail}}" target="_blank">{{this.mail}}</a>
                </th>
                <th>
                    <a href="/client/{{this.id}}">{{this.name}}</a>
                </th>
                <th>
                    {{this.nextContactAt}}
                </th>
                <th>
                    <a href="/client/{{this.id}}">
                        Szczegóły
                    </a>
                    <form method="POST" action="/client/{{this.id}}?_method=DELETE">
                        <button type="submit" >
                            Usuń
                        </button>
                    </form>
                </th>

            </tr>

        {{/each}}
        </tbody>
    </table>
<form method="get" action="/client/forms/add">
    <button type="submit">Dodaj nowego klienta</button>
</form>


